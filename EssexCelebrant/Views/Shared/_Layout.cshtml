<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Essex Celebrant - @ViewBag.Title</title>
    <link href="https://fonts.googleapis.com/css?family=Open+Sans" rel="stylesheet">
    <link href="~/Content/CSS/Menu.css" rel="stylesheet" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
</head>
<body>
    <!-- Header -->
    <header id="header">
        <div style="clear: both;">
            @*<div>
                <a style="padding-left: 5px;" href="index.html" class="logo">
                    <div style="text-align: left;">Glenn Mayes</div>
                    <div style="text-align: left;">Essex Celebrant</div>
                </a>
            </div>*@
            <nav style="margin-top: 30px;">
                <ul class="nav">
                    <li class="submenu">
                        <a class="dropbtn" href="@Url.Action("Index", "Home")">Home</a>
                        <div class="submenu-content">
                            <a href="@Url.Action("About", "Home")">About me</a>
                            <a href="@Url.Action("Contact", "Home")">Contact me</a>
                        </div>
                    </li>
                    <li><a href="@Url.Action("Index", "Weddings")">Weddings</a></li>
                    <li><a href="elements.html">Gallery</a></li>
                    <li><a href="@Url.Action("Testimonials", "Home")">Testimonials</a></li>
                    <li class="submenu">
                        <a class="dropbtn">More</a>
                        <div class="submenu-content">
                            <a href="@Url.Action("Index", "Links")">Links</a>
                            <a href="@Url.Action("Index", "FAQ")">FAQs</a>
                        </div>
                    </li>
                    <li><a href="elements.html">Venues</a></li>
                    <li><a href="@Url.Action("Index", "Celebrant")">Independent Celebrant</a></li>
                </ul>
            </nav>
        </div>
        <div style="float: left; color: #fff; font-weight: bold; width: 50%;">
            <p style="margin: 0 0 0 77%; padding: 0; font-size: 135%; color: #fff; font-family: 'Pacifico', cursive; font-weight: normal;">Glenn Mayes</p>
             <p style="margin: 0; padding: 0; font-size: 80%; color: #fff;">Toastmaster, Master of Ceremonies & Independent Celebrant</p>
        </div>
    </header>

    <div class="container">
        @RenderBody()
        <hr />
        <footer>
            <!-- Footer -->
            <section id="footer">
                <div class="inner">
                    <h2>Get in Touch</h2>
                    <form method="post" action="#">
                        <div class="field half first">
                            <label for="name">Name</label>
                            <input type="text" name="name" id="name" />
                        </div>
                        <div class="field half">
                            <label for="email">Email</label>
                            <input type="text" name="email" id="email" />
                        </div>
                        <div class="field">
                            <label for="message">Message</label>
                            <textarea name="message" id="message" rows="6"></textarea>
                        </div>
                        <ul class="actions">
                            <li><input type="submit" value="Send Message" class="alt" /></li>
                        </ul>
                    </form>
                    <div class="copyright">
                        &copy; Untitled Design: <a href="https://templated.co/">TEMPLATED</a>. Images <a href="https://unsplash.com/">Unsplash</a>
                    </div>
                </div>
            </section>
        </footer>
    </div>

    @Scripts.Render("~/bundles/Introspect")

    @RenderSection("scripts", required: false)
</body>
</html>
