
@using EssexCelebrant.Models.Carousel;

@{
    ViewBag.Title = "Dinners";
    var carousel = new List<Carousel>
    {
        new Carousel
        {
            Image = "Content/Images/Masonic.png",
            Line1 = "Etiquette and tradition adhered to at a Ladies Festival"
        },
        new Carousel
        {
            Image = "Content/Images/ChampagneGlasses.png",
            Line1 = "Ensure that the Charity event goes smoothly, a Professional Toastmaster watches the timing and compares with flair"
        },
        new Carousel
        {
            Image = "Content/Images/MilitaryDinner.png",
            Line1 = "Passing the port is just one of many rituals the Professional Toastmaster can oversee."
