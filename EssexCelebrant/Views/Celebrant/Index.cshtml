            Line1ContainsHtml = true
        },
        new Carousel
        {
            Image = "Content/Images/Funeralphotography.jpeg",
            Line1 = "Thought about photographing your loved one's funeral?",
            Line2 = "Contact us on <a href='tel:07826339498' target='_blank'>07826 339498</a>",
